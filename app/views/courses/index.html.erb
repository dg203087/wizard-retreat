<h1>All Courses</h1>

<% if admin_only %>
    <%= link_to "Add Course", new_course_path%>
<% end %>

<% @courses.each do |course| %>
    <h2><%= link_to course.name, course_path(course)%></h2>

    <% if current_wizard %>
        <%= link_to "Register for Course", new_course_registration_path(course.id) %><br />
    <%end %>

    <% if admin_only %>
        <%= link_to "Edit Course", edit_course_path(course) %>
        <%= button_to "Delete Course", course, method: :delete %>
    <% end %>

<% end %>
