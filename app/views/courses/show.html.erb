<h1><%= @course.name %></h1>
Location: <%= @course.location %><br /><br />
Time: <%= @course.course_time %>
<p><%= @course.description %></p>
Currently Enrolled: <%= @course.currently_enrolled %><br /><br />
Maximum Participants: <%= @course.maximum_participants%> Wizards

<br><br>
<!-- this is double - which one works? 
<%= link_to "Register for Course", new_registration_path %><br />
-->
<%= form_tag("/registrations", method: "post") do %>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :course_id, @course.id %>
    <%= button_tag "Register for Course" %>
<% end %>

<% if admin_only %>     
    <%= link_to "Edit Course", edit_course_path(@course) %>
    <%= button_to "Delete Course", @course, method: :delete %>
<% end %>

