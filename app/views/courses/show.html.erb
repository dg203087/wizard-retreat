<h1><%= @course.name %></h1>
Location: <%= @course.location %><br />
<p><%= @course.description %></p>
Currently Enrolled: <%= @course.currently_enrolled %><br />
Maximum Participants: <%= @course.maximum_participants%> Wizards

<br><br>

<%= link_to "Register for Course", new_course_registration_path(@course.id) %><br />

<%= link_to "See Wizards Registered for this Course", course_registrations_path(:course_id => @course.id) %> <br>

<% if admin_only %>     
    <%= link_to "Edit Course", edit_course_path(@course) %>
    <%= button_to "Delete Course", @course, method: :delete %>
<% end %>

