<h1><%= @course.name %></h1>
Location: <%= @course.location %><br />
<p><%= @course.description %></p>
Currently Enrolled: <%= @course.currently_enrolled %><br />
Maximum Participants: <%= @course.maximum_participants%> Wizards

<br><br>

<button class="button" ><%= link_to "Register for Course", new_course_registration_path(@course.id) %></button><br /><br>

<% if admin_only %> 
    <h3>Admin Functions</h3>    
    <button class="button" ><%= link_to "Edit Course", edit_course_path(@course) %></button>
    <%= button_to "Delete Course", @course, method: :delete, class: "button"%>
<% end %>

