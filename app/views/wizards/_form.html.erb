<% if @wizard.errors %>
    <% @wizard.errors.full_messages.each do |error| %>
        <p style="color: red"><%= error %></p>
    <% end%>
<% end %>

<%= form_for(@wizard) do |f| %>

    <%= f.label :email %>
    <%= f.text_field :email %><br><br>
  
    <%= f.label :password %>
    <%= f.password_field :password %><br><br>
    
    <%= f.label "Confirm Password" %>
    <%= f.password_field :password_confirmation %><br><br>

    <%= f.label :first_name %>
    <%= f.text_field :first_name %><br><br>

    <%= f.label :Last_name %>
    <%= f.text_field :last_name %><br><br>

    <%= f.label :house %>
    <%= f.select :house, [['Gryffindor'], ['Slytherin'], ['Ravenclaw'], ['Hufflepuff']], :include_blank => true %><br><br>

    <p>Admin? <%= f.check_box :admin, options = {:class => "wizard_admin"} %></p>
    <br>

    <%= f.submit nil, class: "button" %>
<% end %>
